    <!-- Header -->
    <header class="header">
      <div class="container">
        <div class="header-content">
          <a href="#panneaux-solaires-accueil" class="logo">
            <img
              src="/images/francepanneaux-solaires-france-logo.png"
              class="logo-img"
              alt="Logo Autoconsommation Solaire France"
              loading="lazy"
              decoding="async"
            />
          </a>
          <nav class="nav" aria-label="Navigation principale">
            <a
              href="/#panneaux-solaires-accueil"
              aria-label="Aller à la section accueil panneaux solaires"
              >Accueil</a
            >
            <a
              href="/#avantages-panneaux-solaires"
              aria-label="Découvrir les avantages des panneaux solaires"
              >Avantages</a
