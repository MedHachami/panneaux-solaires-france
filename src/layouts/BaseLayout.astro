    <meta
      property="og:description"
      content="Réduisez vos factures d'électricité jusqu'à 70% avec nos panneaux solaires. Installation certifiée RGE partout en France."
    />
    <meta property="og:type" content="website" />
    <meta
      property="og:url"
      content="https://www.panneauxsolairfrance.com/"
    />
    <meta
      property="og:image"
      content="https://www.panneauxsolairfrance.com/modern-solar-panels-on-french-house-roof-with-blue.png"
    />

    <!-- Schema.org structured data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "name": "Autoconsommation Solaire France",
        "description": "Spécialiste installation panneaux solaires photovoltaïques en France",
