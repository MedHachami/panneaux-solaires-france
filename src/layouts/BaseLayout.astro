            <a
              href="/#devis-panneaux-solaires"
              aria-label="Obtenir un devis gratuit pour panneaux solaires"
              >Devis</a
            >
            <a
              href="/#contact-installation-solaire"
              aria-label="Contacter nos experts en installation solaire"
              >Contact</a
            >
          </nav>
          <a
            href="/#devis-panneaux-solaires"
            class="btn btn-primary"
            aria-label="Obtenir un devis gratuit immédiatement"
            >Devis Offert 24h</a
          >
        </div>
      </div>
    </header>
    <slot />
    <!-- Footer -->
    <footer id="contact-installation-solaire" class="footer">
      <div class="container">
        <div class="footer-grid">
          <div class="footer-section">
            <div class="logo" style="margin-bottom: 1rem;">
